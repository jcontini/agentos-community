{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "..",
    "paths": {
      "@test/*": ["./utils/*"]
    }
  },
  "include": [
    "../adapters/**/tests/**/*.ts",
    "./utils/**/*.ts",
    "./setup.ts"
  ]
}
